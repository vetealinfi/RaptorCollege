<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:paddingLeft="10dp"
    >




    <ImageView
        android:id="@+id/colegio_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:elevation="10dp"
        android:layout_gravity="left"
        android:translationX="5dp"
        android:translationY="15dp"
        android:src="@drawable/college_placeholder" />

    <TextView
        android:id="@+id/college_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:textSize="18dp"
        android:background="@color/accent_transparency"
        android:gravity="center"
        android:textColor="@color/text"
        android:textStyle="bold"

        android:text="Nombre de Colegio 1" />

    <TextView
        android:id="@+id/college_address"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:textSize="15dp"
        android:background="@color/accent_transparency"
        android:gravity="center"
        android:translationY="60dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:text="Direccion de Colegio largooo" />

</android.support.v7.widget.CardView>